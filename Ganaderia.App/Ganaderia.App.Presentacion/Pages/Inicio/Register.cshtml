@page
@model Ganaderia.App.Presentacion.Pages.RegisterModel
@{
    Layout = "~/Pages/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Registro";
}
<body
    style="background-image: url(/images/PastorVac.jpg);background-size: cover; background-repeat: no-repeat; opacity:0.9; ">

<div class="text-center">
    <h1 class="display-4">Bienvenido a GanaderApp</h1>
    <p>Aplicación Web en Construccion para el proyecto MinTIC 2022 en su ciclo 3, desarrollada en .NET Core</a>.</p>
</div>

<div class="d-flex justify-content-center">
    <img src="/images/cowgrande.png" width="200" height="200" class="d-inline-block align-top" alt="">
</div>

    <style>
        .contain {
            width: 80%;
            margin-top: 5%;
            margin-left: 10%;
            border-radius: 5%;
            background-color: yellowgreen;
            color: azure;
        }

        .itemlog {
            width: 90%;
            margin-left: 5%;
        }

        label {
            color: azure;

        }

        h2 {
            color: darkgray;
        }

        h3{
            color: red;
        }

        h4{
            color: red;
        }

        hr {
            background-color: black;
            width: 90%;
            margin-left: 5%;
            height: 4px;
        }
    </style>

    <!-- Formulario Ganadero -->
    <div class="contain">
        <div class="itemlog">
            <div class="text-center">
                <br>
					<h2 style="color:azure">Registro </h2>
                    <p>Bienvenido, seleccione el perfil a crear en la aplicación.</p>
				</div>
                <br>
            <form method="post">
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary" asp-page-handler="Lista" asp-route-tipo="ganadero" style="padding:2% 4% 2% 4%; border-color: darkgreen; color:azure; border-end-color; darkblue ">Ganadero</button>
                    <button type="submit" class="btn btn-primary" asp-page-handler="Lista" asp-route-tipo="veterinario" style="margin-left:8%; padding:2% 4% 2% 4%; border-color: darkgreen; color:azure; border-end-color; darkblue ">Veterinario</button>
                </div>
                
            </form>
            
            <br>
            <form method="post">
                <!-- Input oculto para enlazar con Model Ganadero.cshtml.cs con el ID -->
                @if (Model.Tipo!=null)
                {
                    if(Model.Tipo.Equals("ganadero"))
                    {
                        <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Nombres *</label>
                        <input type="text" class="form-control" id="Nombre" name="Nombre" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Apellidos *</label>
                        <input type="text" class="form-control" id="Apellido" name="Apellido" required>
                    </div>
                </div>
                <!-- Informacion de Localizacion -->
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Número de Teléfono *</label>
                        <input type="text" class="form-control" id="NumeroTelefono" name="NumeroTelefono" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Dirección *</label>
                        <input type="text" class="form-control" id="Direccion" name="Direccion" required>
                    </div>
                </div>
                <!-- Campos de Correo y Claves -->
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Correo Electrónico *</label>
                        <input type="email" class="form-control" id="correo" name="correo" required placeholder="Login">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Contraseña *</label>
                        <input type="password" class="form-control" id="contrasena" name="contrasena" required>
                    </div>
                </div>
                <br>
                <h5>Campos de Localización</h5>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Latitude</label>
                        <input type="text" class="form-control" id="Latitude" name="Latitude">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Longitude</label>
                        <input type="text" class="form-control" id="Longitude" name="Longitude">
                    </div>
                </div>
                <br>
                <!-- Botones -->
                <div class="d-flex justify-content-center">
                    <button class="btn btn-primary" asp-page-handler="AddG" style="border-color: darkgreen; background-color:rgb(90,180,110); color:azure; border-end-color; darkblue " >Registrar</button>
                </div>
                    }
                    if(Model.Tipo.Equals("veterinario"))
                    {
                                <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Nombres *</label>
                                <input type="text" class="form-control" id="Nombre" name="Nombre" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Apellidos *</label>
                                <input type="text" class="form-control" id="Apellido" name="Apellido" required>
                            </div>
                        </div>
                        <!-- Informacion de Localizacion -->
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Número de Teléfono *</label>
                                <input type="text" class="form-control" id="NumeroTelefono" name="NumeroTelefono" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Dirección *</label>
                                <input type="text" class="form-control" id="Direccion" name="Direccion" required>
                            </div>
                        </div>
                        <!-- Campos de Correo y Claves -->
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Correo Electrónico *</label>
                                <input type="email" class="form-control" id="correo" name="correo" required placeholder="Login">
                            </div>
                            <div class="form-group col-md-6">
                                <label>Contraseña *</label>
                                <input type="password" class="form-control" id="contrasena" name="contrasena" required>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <div class="form-group col-md-6">
                                <label>Registro Profesional *</label>
                                <input type="text" class="form-control" id="Registro" name="Registro" required>
                            </div>
                        </div>
                        <br>
                        <h5>Campos de Localización</h5>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Latitude</label>
                                <input type="text" class="form-control" id="Latitude" name="Latitude">
                            </div>
                            <div class="form-group col-md-6">
                                <label>Longitude</label>
                                <input type="text" class="form-control" id="Longitude" name="Longitude">
                            </div>
                        </div>
                        <br>
                <!-- Botones -->
                <div class="d-flex justify-content-center">
                    <button class="btn btn-primary" asp-page-handler="AddV" style="border-color: darkgreen; background-color:rgb(90,180,110); color:azure; border-end-color; darkblue " >Registrar</button>
                </div>
                    }
                }
                <!-- Cajas de Texto enlazadas al model para cargar datos o adicionar -->
                <!-- Espacio Nombres y apellidos -->
                @if(Model.Mensaje != null)
                {
                    <div class="text-center">
                        <h3>@Model.Mensaje</h3>
                    </div>
                    <br>
                }
                <br>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-primary table-btn" asp-page="../Index" style="border-color: darkgreen; background-color:rgb(90,180,110); color:azure; border-end-color; darkblue ">
                        <i class="fas fa-info-circle"></i>
                        Atrás
                    </a>
                </div>
                
                <br>
                <br>
            </form>
        </div>
</body>