@page
@model Ganaderia.App.Presentacion.Pages.AtencionModel
@{
    ViewData["Title"] = "Atención Veterinaria";
}
<body
    style="background-image: url(/images/VETbovi.jpg);background-size: cover; background-repeat: no-repeat; opacity:0.9; ">


    <style>
        .contain {
            width: 80%;
            margin-top: 5%;
            margin-left: 10%;
            border-radius: 5%;
            background-color: yellowgreen;
            color: azure;
        }

        .itemlog {
            width: 90%;
            margin-left: 5%;
        }

        

        hr {
            background-color: black;
            width: 90%;
            margin-left: 5%;
            height: 4px;
        }
    </style>

    <!-- Formulario Ganadero -->
    <div class="contain">
        <div class="itemlog">
            <form method="post">
                <!-- Input oculto para enlazar con Model Ganadero.cshtml.cs con el ID -->
                <input type="hidden" asp-for="atencion.Id"/>
                <br>
				<div class="text-center">
					<h2>Atención Veterinaria al Ejemplar: </h2>
				<br>
                    <p>En este espacio se puede llevar un control de la atención en salud al animal.</p>
                </div>
                <!-- Cajas de Texto enlazadas al model para cargar datos o adicionar -->
                <div class="d-flex justify-content-center">
                    <div class="form-group col-md-3">
                        <div class="text-center">
                            <label asp-for="atencion.Id">Código Novedad</label>
                        </div>
                        <input asp-for="atencion.Id" type="text" class="form-control" id="Id" readonly="readonly" name="Id">
                    </div>
                </div>
                <!-- Espacio IdGanadero -->
                <div class="d-flex justify-content-center">
                    <div class="form-group col-md-4">
                        <label asp-for="atencion.idEjemplar">Animal *</label>
                        <select asp-for="atencion.idEjemplar" class="form-control" id="idEjemplar" name="idEjemplar" required>
                        <option value="" selected disabled>-- Seleccionar --</option>
                        @foreach (var item in Model.Listaejemplares)
                        {
                            <option>@item.Id</option>
                        }
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="atencion.idVeterinario">Veterinario *</label>
                        <select asp-for="atencion.idVeterinario" class="form-control" id="idVeterinario" name="idVeterinario" required>
                        <option value="" selected disabled>-- Seleccionar --</option>
                        @foreach (var item in Model.Listaveterinarios)
                        {
                            <option>@item.Id</option>
                        }
                        </select>
                    </div>
                </div>
                <!-- Otros Datos -->
                <div class="d-flex justify-content-center">
                    <div class="form-group col-md-4">
                        <label asp-for="atencion.Fecha">Fecha de Revisión *</label>
                        <input asp-for="atencion.Fecha" type="text" class="form-control" id="Fecha" name="Fecha" required>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="atencion.Estado">Estado de la Novedad *</label>
                        <select asp-for="atencion.Estado" class="form-control" id="Estado" name="Estado" required>
                        <option value="" selected disabled>-- Seleccionar --</option>
                        <option>Pendiente</option>
                        <option>en Tratamiento</option>
                        <option>Cerrada</option>
                        </select>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <div class="form-group col-md-8">
                        <label asp-for="atencion.Observaciones">Observaciones en la Revisión</label>
                        <textarea asp-for="atencion.Observaciones" class="form-control" id="Observaciones" rows="3" name="Observaciones"></textarea>
                    </div>
                </div>
                <br>
                <!-- Botones -->
                <div class="d-flex justify-content-center">
                    <button class="btn btn-primary" asp-page-handler="Add" style="border-color: darkgreen; background-color:rgb(90,180,110); color:azure; border-end-color; darkblue ">Guardar</button>
                    <a class="btn btn-primary table-btn" asp-page="./ListaEnfermos" style="margin-left:8%; border-color: darkgreen; background-color:rgb(90,180,110); color:azure; border-end-color; darkblue ">
                        <i class="fas fa-info-circle"></i>
                        Atrás
                    </a>
                </div>
                <br>
            </form>
            @if(Model.Mensaje != null)
            {
                <div class="text-center">
                    <h3>@Model.Mensaje</h3>
                    <h4>@Model.Mensaje2</h4>
                </div>
            }
            <br>
        </div>
</body>